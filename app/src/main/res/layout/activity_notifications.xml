<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".notifications.NotificationsActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message" />

    <Button
        android:id="@+id/btn_sendOnChannel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 1" />

    <Button
        android:id="@+id/btn_sendOnChannel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 2" />

    <Button
        android:id="@+id/btn_sendOnChannel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 3" />

    <Button
        android:id="@+id/btn_sendOnChannel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 4" />

    <Button
        android:id="@+id/btn_sendOnChannel5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendOnChannel5"
        android:text="Send on Channel 5" />

    <Button
        android:id="@+id/btn_sendOnChannel6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 6" />

    <Button
        android:id="@+id/btn_sendOnChannel7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel 7" />


    <Button
        android:id="@+id/btn_deleteChannels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Channels" />

</LinearLayout>